{
    "listeners": {
        "*:80": {
            "pass": "routes/main"
        },
        "*:8000": {
            "pass": "routes/health"
        }
    },
    "routes": {
        "main": {
            "match": {
                "uri": "!/index.php"
            },
            "action": {
                "share": "/app/public$uri",
                "fallback": {
                    "pass": "applications/laravel"
                }
            }
        },
        "health": {
            "action": {
                "return": 200
            }
        }
    },
    "applications": {
        "laravel": {
            "type": "php",
            "root": "/app/public/",
            "script": "index.php"
        }
    },
    "access_log": {
        "path": "/dev/stdout"
    },
    "settings": {
        "http": {
            "server_version": false,
            "max_body_size": 268435456
        }
    }
}
